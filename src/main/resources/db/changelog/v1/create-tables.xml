<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.6.xsd">

    <changeSet id="create-tables" author="Ananan">
        <createTable tableName="genre">
            <column name="id" type="serial">
                <constraints nullable="false" primaryKey="true"/>
            </column>
            <column name="name" type="varchar(50)">
                <constraints nullable="false"/>
            </column>
            <column name="description" type="varchar">
                <constraints nullable="false"/>
            </column>
            <column name="movie_id" type="integer"/>
        </createTable>

        <createTable tableName="movie">
            <column name="id" type="serial">
                <constraints nullable="false" primaryKey="true"/>
            </column>
            <column name="description" type="varchar">
                <constraints nullable="false"/>
            </column>
            <column name="duration" type="time">
                <constraints nullable="false"/>
            </column>
            <column name="rating" type="float"/>
            <column name="premiered" type="integer">
                <constraints nullable="false"/>
            </column>
            <column name="genre_id" type="integer"/>
            <column name="review_id" type="integer"/>
        </createTable>

        <createTable tableName="critic">
            <column name="id" type="serial">
                <constraints nullable="false" primaryKey="true"/>
            </column>
            <column name="first_name" type="varchar">
                <constraints nullable="false"/>
            </column>
            <column name="second_name" type="varchar">
                <constraints nullable="false"/>
            </column>
            <column name="about" type="varchar">
                <constraints nullable="false"/>
            </column>
            <column name="review_id" type="integer"/>
        </createTable>

        <createTable tableName="review">
            <column name="id" type="serial">
                <constraints nullable="false" primaryKey="true"/>
            </column>
            <column name="assessment" type="float">
                <constraints nullable="false"/>
            </column>
            <column name="message" type="varchar">
                <constraints nullable="false"/>
            </column>
            <column name="date" type="date">
                <constraints nullable="false"/>
            </column>
            <column name="movie_id" type="integer"/>
            <column name="critic_id" type="integer"/>
        </createTable>

    </changeSet>

</databaseChangeLog>